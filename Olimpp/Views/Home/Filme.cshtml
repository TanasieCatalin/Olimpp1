@model IEnumerable<Olimpp.Models.MovieDetalies>

@{
    ViewData["Title"] = "Movie List";
}

<h1>Movie List</h1>


<form action="/Home/Filme">

    <span>
        <p>Cauta dupa Nume</p>
        <input type="text" name="CautaDupaNume">
    </span>
    <button class="btn btn-danger" type="submit">Cauta</button>

</form>


<div class="row">

    @foreach (var item in Model)
    {
        
        <div class="col-md-3">
            <div class="card">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.MoviePicture" widh="100" height="100" asp-append-version="true" />
                </a>
                <div class="container ">

                    <h4><b><a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.MovieName)</a> </b></h4>

                    <a asp-action="RezervaAcum" asp-route-id="@item.Id" class=" btn btn-dark"> Rezerva bilet</a>

                    <a asp-action="Predict" asp-route-id="@item.Id" class=" btn btn- alert-danger"> Predict</a>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>

                </div>
            </div>
        </div>
    }
</div>

     